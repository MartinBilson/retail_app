<span class="col-md-10" style="margin-left: -25px;"> <%= link "Back", to: breakbulk_path(@conn, :index),class: "btn btn-gold btn-gold"  %></span>

<div class="card" style="margin:25px -10px">
    <div class="card-header" data-background-color="gold">
        <h4 class="title">Break Bulk</h4>
        <p class="category"><%= link "Dashboard", to: breakbulk_path(@conn, :index) %>/ Break Bulk/edit</p>

    </div>
    <%= form_for @changeset, breakbulk_path(@conn, :update, @breakbulk), fn f -> %>
      <%= if @changeset.action do %>
        <div class="alert alert-danger">
          <p>Oops, something went wrong! Please check the errors below.</p>
        </div>
      <% end %>


      <div class="col-md-10">
      <div class="form-group label-floating">
        <%= label f, :"SKU Item", class: "control-label" %>
        <%= select f, :scode, @bat , class: "selectpicker", "data-style": "btn btn-gold btn-round", title: "Choose item" , required: "required"%>
          </div>
        <%= error_tag f, :scode %>
      </div>
      <div class="col-md-6">
        <div class="form-group label-floating">

        <%= label f, :quantity, class: "control-label" %>
        <%= text_input f, :quantity, class: "form-control"%>
          </div>
        <%= error_tag f, :quantity %>
      </div>


      <div class="col-md-6">
        <div class="form-group label-floating">

        <%= label f, :active, class: "control-label" %>
        <%= checkbox f, :active, class: "checkbox-material" %>
          </div>
        <%= error_tag f, :active %>
      </div>

      <div class="col-md-6">
        <div class="form-group label-floating">
        <%= submit "Submit", class: "btn btn-gold" %>
      </div>
        </div>
    <% end %>
