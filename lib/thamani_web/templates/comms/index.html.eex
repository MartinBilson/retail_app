<% alias Thamani.Sales%>
<!-- header section start -->
<div class="row" style="background-image: url(../images/2.jpg);">
<div class="container">
   <div class="header_section_top">
      <div class="row">
         <div class="col-sm-12">
            <div class="custom_menu">
               <ul>

                 <li> <%= link "Terms & Conditions", class: "items",to: terms_path(@conn, :index) %> </li>
                 <li> <%= link "Privacy policy", class: "items",to: privacy_path(@conn, :index) %></li>
                <li> <%= link "My profile",class: "items", to: user_path(@conn, :show, @current_user.slug) %></li>
                 <li>  <%= link "Sign out", class: "items",to: login_path(@conn, :delete, @current_user),
                                       method: "delete" %></li>


                 <li><a href="commerce/<%= @current_user.id %>" class="cart" style="z-index: 10;"><i class="fa fa-shopping-cart" style="font-size: 35px;margin-top: -7px;color: #00d432;border-radius: 30px;border: 2px black solid;padding: 6px 11px 6px 6px;background:white;"></i><span></span></a></li>
                 <li><a href="/panel" class="back" rel="tooltip" title="Back to panel" style="z-index: 10;margin-left: -15px;"><i class="fa fa-reply" style="font-size: 35px;margin-top: 0px;color: #fb0000;"></i></a></li>
                 <li><a href="#" class="searches" data-toggle="modal" data-target="#searchModal" rel="tooltip" title="Search" style="z-index: 10;">
                   <i class="fa fa-search" style="font-size: 35px;margin-top: 0px;color: #718ed3;"></i>
                 </a></li>
                  <li> <a href="/completed" class="orders" rel="tooltip" title="Completed Orders" style="z-index: 10;"><i class="fa fa-folder-open" style="font-size: 35px;margin-top: 0px;margin-left: 10px;color: #f26522;"></i></a></li>
                   </ul>

               </div>
            </div>

         </div>
      </div>
   </div>

   <div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="Label" aria-hidden="true">
   <div class="modal-dialog" role="document">
   <div class="modal-content">
   <div class="modal-header">
   <h5 class="modal-title" id="exampleModalLabel">Seacrh Functionalities</h5>
   <button type="button" class="close" data-dismiss="modal" aria-label="Close">
   <span aria-hidden="true">&times;</span>
   </button>
   </div>
   <div class="modal-body">
   <div class="form-group">

   <%= search_form(@conn, @rummage,
   [ fields: [

   gtin: %{label: "Search by Barcode", search_type: "like"},
   name: %{label: "Search by item", search_type: "like"},
   company: %{label: "Search by company", search_type: "like",assoc: ["user"]},
   names: %{label: "Search by category", search_type: "like",assoc: ["pmaster"]}

   ]
   ]

   ) %>
   </div>

   </div>
   <div class="modal-footer">
   <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

   </div>
   </div>
   </div>
   </div>
<!-- logo section start -->
<div class="logo_section">
   <div class="container">
      <div class="row">
         <div class="col-sm-12">
            <div class="logo"><a href="index.html"><img src="<%= static_path(@conn, "/images/thamani_logo.png")   %>"></a></div>
         </div>
      </div>
   </div>
</div>

