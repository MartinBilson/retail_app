<!-- banner section start -->
<div class="banner_section layout_padding">
   <div class="container">
      <div id="my_slider" class="carousel slide" data-ride="carousel" style="background-color: rgba(0, 212, 50, 0.72);">
         <div class="carousel-inner">
            <div class="carousel-item active">
               <div class="row">
                  <div class="col-sm-12">
                     <h1 class="banner_taital">Get Started by <br>Ordering your Items</h1>
                     <!-- <div class="buynow_bt"><a href="#">Buy Now</a></div> -->
                  </div>
               </div>
            </div>

         </div>

      </div>
   </div>
</div>
<!-- banner section end -->
</div>
<!-- banner bg main end -->
<!-- Pwani section start -->
<div class="fashion_section">
<div id="main_slider" class="carousel slide" data-ride="carousel">
   <div class="carousel-inner">
      <div class="carousel-item active">
         <div class="container">
            <h1 class="fashion_taital">Browse Products</h1>
            <div class="fashion_section_2">

               <div class="row">

                 <%= if @sku == [] do %>
                 <div class="col-md-10">
                   <h4>No item found in that search criteria</h4>
                 	<span ><%= link "Continue shopping",  to: comms_path(@conn, :index), class: "fa fa-tags btn btn-info"  %></span>
                 </div>
                 <% else %>
                 	<%= for item <- @sku do %>

                  <%
                  item_price =
                  	case item.price do
                  		"1" -> "1.0"
                  		"" -> "0.0"
                  		_ -> item.price
                  	end
                  %>
                  <div class="col-lg-3 col-sm-4">
                     <div class="box_main">
                        <h4 class="shirt_text"><%= item.name%></h4>
                        <p class="price_text">Price  <span style="color: #262626;">KSh <%= String.to_float(item_price) + item.markup + Sales.get_gs1_value() %></span></p>
                        <p class="price_text">Barcode  <span style="color: #262626;"> <%= item.gtin %></span></p>
                        <p class="price_text">Category  <span style="color: #262626;"> <%=  item.pmaster.names %></span></p>
                        <div class="tshirt_img"><img src="<%= Thamani.ImageUploader.url({item.image, item})%>"></div>

                     </div>
                     <div class="btn_main">
                           <button class="btn btn-success" onclick="AddToCart(<%= item.id %>)">Add to cart</button>

                     </div>
                  </div>
                  <% end %>

                    <% end %>
               </div>
            </div>
         </div>
      </div>


   </div>

</div>
</div>
<!-- Pwani  section end -->
