<%= if @current_user.userlevel do %>
<div class="row">
                       <div class="col-md-12">

                         <span><%= link "Back", to: pmaster_path(@conn, :index), class: "btn btn-gold btn-gold" %></span>
                           <div class="card">
                               <div class="card-header" data-background-color="gold">
                                   <h4 class="title">Barcordes</h4>
                                   <p class="category"><%= link "Dashboard", to: gs1_dashboard_path(@conn, :index) %>/ Barcode/ Show Barcode</p>

                               </div>
                               <table class="table" style="margin-left: 15px;">
                                    <tbody>
                                            <tr>
                                                   <td>
                                                          <h5>  Name: <%= @pmaster.name %> </h5>
                                                    </td>
                                          </tr>
                                          <tr>
                                                    <td>
                                                            <h5>  Type: <%= @pmaster.type %> </label>
