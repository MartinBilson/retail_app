
<div class="row">
           <div class="col-md-12">
                         <div class="navbar-form navbar-right" >



                         </div>
                           <div class="card">
                               <div class="card-header" data-background-color="gold">
                                   <h4 class="title">Shop</h4>
                                   <p class="category"><%= link "Dashboard", to: retail_admin_dashboard_path(@conn, :index) %>/Shop/</p>

                               </div>

                               <div class="card-content table-responsive">
                                 <div id="toolbar" style="margin-top: -16px;">
                                <select class="form-control">
                                  <option value="">Export Current page</option>
                                  <option value="all">Export All</option>
                                  <option value="selected">Export Selected</option>
                                </select>
                              </div>
 <table class="table" id ="fresh-table" data-toggle="table" data-toolbar="#toolbar" data-search="true"  data-pagination="true" data-show-print="true" data-show-export="true"   data-export-options='{"fileName": "reports"}'>
  <thead class="text-info">
    <tr>
      <th data-field="state" data-checkbox="true"></th>
      <th data-field="fullname" data-sortable="true">name</th>
      <th data-field="email" data-sortable="true">City /County</th>
      <th data-field="description" data-sortable="true">Description</th>
      <th data-field="retail" data-sortable="true">Retailer</th>
      <th>Active</th>

      <th class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
<%= for shop <- @shop do %>
    <tr>
      <td></td>
      <td><%= shop.name %></td>
      <td><%= shop.kcity.city %>/<%= shop.kcity.county %></td>
      <td><%= shop.description %></td>
        <td><%= shop.user.company %></td>
      <%= if shop.active == "true" do %>
      <td><i class="fa fa-check" style= "color:#66bb6a !important"></i></td>
      <% else  %>
      <td><i class="fa fa-close" style= "color:#f44336 !important"></i></td>
      <% end %>

      <td class="text-center">
        <span  rel="tooltip" title="View Task" class="btn btn-info btn-simple ">
            <span ><%= link "", to: shop_admin_path(@conn, :show, shop),  "data-toggle": "tooltip", title: "View Data", class: "fa fa-search-plus ",style: "color:#00bcd4 !important" %></span>
        </span>


      </td>
    </tr>
<% end %>
</tbody>
</table>
                </div>
              </div>

            </div>
          </div>
