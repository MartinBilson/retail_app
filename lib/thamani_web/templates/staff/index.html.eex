<%= if @current_user.id == @user.id do %>
<div class="row">
           <div class="col-md-12">
                         <span><%= link "Add Staff", to: staff_path(@conn, :new), class: "btn gold btn-gold" %></span>
                         <div class="navbar-form navbar-right" >



                         </div>
                           <div class="card">
                               <div class="card-header" data-background-color="gold">
                                   <h4 class="title">Staff</h4>
                                   <p class="category"><%= link "Dashboard", to: retail_dashboard_path(@conn, :index) %>/Staff/</p>

                               </div>

                               <div class="card-content table-responsive">
                                 <div id="toolbar" style="margin-top: -16px;">
                                <select class="form-control">
                                  <option value="">Export Current page</option>
                                  <option value="all">Export All</option>
                                  <option value="selected">Export Selected</option>
                                </select>
                              </div>
 <table class="table" id ="fresh-table" data-toggle="table" data-toolbar="#toolbar" data-search="true"  data-pagination="true" data-show-print="true" data-show-export="true"   data-export-options='{"fileName": "reports"}'>
  <thead class="text-info">
    <tr>
      <th data-field="state" data-checkbox="true"></th>
      <th data-field="fullname" data-sortable="true">Fullname</th>
      <th data-field="email" data-sortable="true">Phone</th>
      <th data-field="passcode" data-sortable="true">Passcode</th>
      <th data-field="shop" data-sortable="true">Shop</th>
      <th data-field="description" data-sortable="true">Description</th>
      <th>Active</th>

      <th class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
<%= for staff <- @staff do %>
    <tr>
      <td></td>
      <td><%= staff.fullname %></td>
      <td><%= staff.phone %></td>
      <td><%= staff.passcode %></td>
      <td><%= staff.shops.name %></td>
      <td><%= staff.description %></td>
      <%= if staff.active == "true" do %>
      <td><i class="fa fa-check" style= "color:#66bb6a !important"></i></td>
      <% else  %>
      <td><i class="fa fa-close" style= "color:#f44336 !important"></i></td>
      <% end %>

      <td class="text-center">
        <span  rel="tooltip" title="View Task" class="btn btn-info btn-simple ">
            <span ><%= link "", to: staff_path(@conn, :show, staff),  "data-toggle": "tooltip", title: "View Data", class: "fa fa-search-plus ",style: "color:#00bcd4 !important" %></span>
        </span>

         <span  rel="tooltip" title="Edit Task" class="btn btn-primary btn-simple ">
             <span><%= link "", to: staff_path(@conn, :edit, staff),  "data-toggle": "tooltip", title: "Edit Data", class: "fa fa-pencil", style: "color:#66bb6a !important" %></span>
        </span>
        <span  rel="tooltip" title="Delete Task" class="btn btn-danger btn-simple ">
            <span><%= link "", to: staff_path(@conn, :delete, staff), method: :delete, data: [confirm: "Are you sure?"],  "data-toggle": "tooltip", title: "Delete Data", class: "fa fa-close", style: "color:#f44336 !important" %></span>
       </span>


      </td>
    </tr>
<% end %>
</tbody>
</table>
                </div>
              </div>

            </div>
          </div>
          <% else %>
          <h1>Not authorised to view this panel</h1>
          <% end %>
